<% include headerLayout %>

<div class="container smaller">



      <h1><span class="fa fa-sign-in"></span>Welcome!</h1>

      <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <!-- LOGIN FORM -->
        <form action="/login" method="post">
          <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" placeholder="Email" name="email">
          </div>
          <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" placeholder="Password" name="password">
          </div>

          <button type="submit" class="btn btn-lg btn-success">Login</button>
        </form>

        <p class="subText">Need an account? <a class="littleOnes" href="/signup">Signup</a></p>
        <p class="subText">Or go <a class="littleOnes" href="/">Home</a>.</p>

    </div>


<% include footerLayout %>
