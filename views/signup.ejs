<% include headerLayout %>

  <div class="container smaller">



      <h1><span class="fa fa-sign-in"></span>Let's Get Started</h1>

      <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <!-- LOGIN FORM -->
        <form action="/signup" method="post">
          <div class="form-group">
            <label>Username</label>
            <input type="text" class="form-control" placeholder="Username" name="Username">
          </div>
          <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" placeholder="Email" name="email">
          </div>
          <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" placeholder="Password" name="password">
          </div>

          <button type="submit" class="btn btn-warning btn-lg">Signup</button>
        </form>

        <p class="subText">Already have an account? <a class="littleOnes" href="/login">Login</a></p>
        <p class="subText">Or go <a class="littleOnes" href="/">Home</a>.</p>

    </div>

<% include footerLayout %>
